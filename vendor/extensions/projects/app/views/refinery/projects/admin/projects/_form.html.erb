<%= form_for [refinery, :projects_admin, @project] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @project,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description  -%>

  </div>
  
  <div class='field'>
    <%= f.label :completed -%>
    <%= f.date_select :completed  -%>

  </div>
  
  <div class='field'>
    <%= f.label :client -%>
    <%= f.text_field :client  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.projects.admin.projects.project'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @project.title) %>
<% end -%>
